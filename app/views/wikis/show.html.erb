<% if can_see_wiki?(current_user, @wiki) %>
  <div>
    <h1>
      <%= @wiki.title %> <br>
      <small>
        Created <%= time_ago_in_words(@wiki.created_at) %> ago.
        <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-success btn-small' %>
        <%= link_to "Delete", @wiki, method: :delete, class: 'btn btn-danger btn-small', data: { confirm: "Are you sure you want to delete this wiki?" } %>
      </small>
    </h1>
  </div>
<% end %>
<div class="row">
  <div class="col-md-8">
    <p><%= @wiki.body %></p>
  </div>
</div>
